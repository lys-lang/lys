/// TESTING FRAMEWORK

#[extern "test" "pushTest"]
fun START(title: u32): void = panic()
fun START(title: bytes): void = START(title.ptr - 4 as u32)

#[extern "test" "registerAssertion"]
fun verify(passed: boolean, title: u32): void = panic()
fun verify(passed: boolean, title: bytes): void = verify(passed, title.ptr - 4 as u32)

#[extern "test" "popTest"]
fun END(): void = panic()

fun assert(condition: boolean): void = assert(condition, "assert(false)")
fun assert(condition: boolean, message: bytes): void = {
  verify(condition, message)
  if (condition == false) {
    lastErrorMessage = Message(message)
    panic()
  }
}